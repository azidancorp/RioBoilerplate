# Environment Variables Example
# Copy this file to .env and set your actual values

# Admin deletion password for secure user deletion operations
# This password is required for admin-level user deletion operations
ADMIN_DELETION_PASSWORD=UserD3l3t!0n@AdminP4n3l

# Email Validation Configuration
# Set to "true" to enforce strict email format validation (user@domain.com)
# Set to "false" to allow any string as identifier (useful for username-based apps)
REQUIRE_VALID_EMAIL=true

# Allow users to login with username in addition to email
ALLOW_USERNAME_LOGIN=false

# Primary identifier for users: "email" or "username"
PRIMARY_IDENTIFIER=email